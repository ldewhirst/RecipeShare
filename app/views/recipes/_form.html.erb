<%= form_for @recipe do |f| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(recipe.errors.count, "error") %>.</h4>
      <ul>
        <% recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(recipe.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter Recipe Name" %>
  <% end %>
  <%= form_group_tag(recipe.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 16, class: 'form-control', placeholder: "Enter Recipe Details" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
