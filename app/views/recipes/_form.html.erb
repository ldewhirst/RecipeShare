
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="css/bootstrap-wysihtml5.css">

<%= simple_form_for @recipe do |f| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(recipe.errors.count, "error") %>.</h4>
      <ul>
        <% recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(recipe.errors[:title]) do %>
    <%= f.input :title, label: "Enter recipe name", error: "Recipe name required" %>
  <% end %>
  <%= f.input :body, label:  "Enter recipe details", input_html: { class: 'wysihtml5' } %>
    <%= f.button :submit, "Save Recipe", class: 'btn btn-success' %>
<% end %>
