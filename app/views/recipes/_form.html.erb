<%= form_for @recipe do |f| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(recipe.errors.count, "error") %>.</h4>
      <ul>
        <% recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(recipe.errors[:title]) do %>
    <%= f.label :title, "Recipe Name:", error: "Recipe name required" %>
    <%= f.text_field :title %>
  <% end %>

  <div class="field">
    <%= f.label :body, "Recipe" %>
    <%= f.bootsy_area :body, cols: "100", rows: "20"%>
  </div>
    <%= f.label :tag_list, "Tags (separated by commas)" %>
    <%= f.text_field :tag_list %>
    <%= f.submit "Save Recipe", class: 'btn btn-success' %>
<% end %>
