<!DOCTYPE html>
<html>
<body>
  <h1><%= @recipe.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @recipe.body.html_safe %></p>
    <% if current_user || current_user.admin? %>
      <%= link_to "Edit", edit_recipe_path(@recipe), class: 'btn btn-success' %>
      <%= link_to "Delete", @recipe, method: :delete, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
<small>
  submitted <%= time_ago_in_words(@recipe.created_at) %> ago by <%= @recipe.user.email %>
</small>
</body>
</html>
