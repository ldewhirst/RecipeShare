<header>
  <h1 class="col-md-4 col-md-offset-4">Recipes</h1>
</header>

<div id="container" class="transitions-enabled">
      <% @recipes.each do |recipe| %>
        <div class="box panel-default">
          <div class="thumb">
            <%= image_tag(recipe.image_url(:thumb)) %>
          </div>
          <div class="panel-body text-wrap">
            <%= link_to recipe.title, recipe %>
          </div>
        </div>
      <% end %>
</div>

<div class="row row-centered">
  <div class="col-md-6 col-md-offset-4">
    <% if current_user %>
      <%= link_to "New Recipe", new_recipe_path, class: 'btn btn-default' %>
    <% end %>
    <div id="tag_cloud">
      <% tag_cloud Recipe.tag_counts, %w[s m l] do |tag, css_class| %>
        <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
    </div>
  </div>
</div>
