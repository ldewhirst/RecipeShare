<header>
  <h1 class="col-md-4 col-md-offset-4">All Recipes</h1>
</header>

<div class="container">
  <div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 200 }'>
      <% @recipes.each do |recipe| %>
      <div class="grid-item">
            <p><%= image_tag(recipe.image_url(:thumb), size: "150") %></p>
            <p><%= link_to recipe.title, recipe %></p>
      </div>
      <% end %>
    </div>
</div>

    <div class="row row-centered">
      <div class="col-md-6 col-md-offset-4">
        <% if current_user %>
        <%= link_to "New Recipe", new_recipe_path, class: 'btn btn-default' %>
        <% end %>

<div id="tag_cloud">
  <% tag_cloud Recipe.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>

</div>
</div>
