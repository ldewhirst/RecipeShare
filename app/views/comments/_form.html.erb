<h4>Add a comment</h4>
  <%= form_for [recipe, comment] do |f| %>
    <div class="form-group">
      <%= f.label :body, class: 'sr-only' %>
      <%= f.text_field :body, class: 'form-control', placeholder: "Comment here" %>
    </div>
    <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
  <% end %>
